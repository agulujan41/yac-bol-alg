<!DOCTYPE html>
<html lang="en">

<head>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat&display=swap');

    /* Estilos para las barras de progreso */
    body {

      font-family: 'Montserrat', sans-serif;
      user-select: none;
      background-color: #FFD749;
      margin: 0;
      padding: 0;
    }

    .progress-bar {
      margin-top: 10px;
      width: 100%;
      height: 27px;
      background-color: black;
      border-radius: 5px;

    }

    .progress {
      height: 100%;
      background-image: linear-gradient(180deg, #d6ff81 0, #c2fc85 10%, #adf689 20%, #97ee8c 30%, #82e48f 40%, #6cd890 50%, #57cc90 60%, #42c191 70%, #2cb892 80%, #0db094 90%, #00a995 100%);
      font-weight: bold;
      line-height: 20px;
      color: #3f234d;
      border-radius: 5px;
      text-align: right;

      padding-right: 5px;
    }

    .category {
      margin-top: 20px;
      margin-left: 20px;
      margin-right: 20px;

    }

    .presentacion {
      padding-left: 20px;
      padding-right: 20px;
      text-align: justify;
      margin: 0px;
    }

    .titulo_cursivo {

      font-weight: bold;
      margin-left: 20px;
      text-transform: uppercase;
      font-size: 1.2em;
    }


    .icon_first {
      width: 10%;
    }

    .retroalimentacion_section {
      background-color: #602B7A;
      width: 100%;
      color: white;
      margin: 0px;
      padding-top: 20px;
      padding-bottom: 20px;

    }

    .parrafos {
      width: 100%;
      padding-top: 20px;
      padding-bottom: 20px;
    }

    .principal {
      background-color: #FFD749;
    }

    .comentary {
      background-color: white;
      width: 80%;
      margin-left: 10%;
      margin-top: 30px;
      border-top-left-radius: 25px;
      border-bottom-right-radius: 25px;
    }

    .docente {
      height: 70px;
      width: 100%;
      color: #602B7A;
      display: flex;
      justify-content: left;
      align-items: center;
      font-size: 0.5em;
      gap: 15px;
    }

    .docente h1 {
      margin-left: 10px;
    }

    .docente img {
      margin-top: 10px;
      margin-left: 10px;
      height: 80%;
      border-radius: 50%;
    }

    .comentary p {
      color: #602B7A;
      font-style: italic;
      margin-bottom: 10px;
      padding-bottom: 20px;
      margin-left: 15%;
      margin-right: 15%;
      font-weight: bold;
    }

    .last_info {
      background-color: #602B7A;
    }

    .last_info img {
      height: 40px;
      margin-left: 10px;
      margin-bottom: 10px;
      opacity: 0.6;
    }

    .last_info h1 {
      padding-top: 85px;
      margin-left: 10px;
      font-size: 0.8em;
      color: rgba(255, 255, 255, 0.864);
    }

    .last_info h2 {

      margin-left: 10px;
      font-size: 0.7em;
      color: rgba(255, 255, 255, 0.749);
    }
  </style>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
  <div class="principal">

    <%- include(dirname+"/views/templates/feedback.ejs") %>

</body>

</html>